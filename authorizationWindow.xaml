<Window x:Class="BankApplication.authorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApplication"
        mc:Ignorable="d"
        Title="authorizationWindow" Height="252" Width="276"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=loginField}">

    <Grid>
        <Button Content="Войти" IsDefault="True" FontSize="20" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top" Width="112" Height="41" Click="Button_Click"/>
        <TextBlock FontStyle="Italic" Margin="78,39,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="37"/>
        <TextBox x:Name="loginField"  HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock FontStyle="Italic" Margin="78,91,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" RenderTransformOrigin="0.506,0.476" HorizontalAlignment="Left" Width="49"/>
        <PasswordBox x:Name="passwordField" HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
